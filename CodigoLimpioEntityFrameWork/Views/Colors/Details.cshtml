@model CodigoLimpioEntityFrameWork.Models.Color

@{
    ViewBag.Title = "DETALLES COLOR";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&family=Ubuntu:wght@500&display=swap" rel="stylesheet">

<h2>DETALLES DEL COLOR</h2>

<div class="detalles">
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.nombreColor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreColor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descripcionColor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcionColor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DepartamentoColor)
        </dt>
        <dd>
            @foreach (var departamentoColor in Model.DepartamentoColor)
            {
                <div>@departamentoColor.Departamento.nombreDepartamento</div>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ideaColor)
        </dt>
        <dd>
            @foreach (var ideaColor in Model.ideaColor)
            {
                <div>@ideaColor.Idea.idIdea - @ideaColor.Idea.nombreIdea</div>
            }
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Editar Color", "Edit", new { id = Model.idColor }) |
    @Html.ActionLink("Regresar", "Index")
</p>

<style>

    body {
        background-image: url('../../Imagenes/Imagen_detalles.png');
        background-size: 90%;
        background-color: #A5EAF3;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    h2 {
        font-family: 'Roboto', sans-serif;
        left: 10px;
        position: relative;
        top: 5px;
    }

    dd {
        margin-left: 25px;
        font-family: 'Raleway', sans-serif;
        font-family: 'Roboto', sans-serif;
        font-family: 'Ubuntu', sans-serif;
    }

    dt {
        margin-left: 25px;
    }

    div.detalles {
        margin-top: 30px;
        background-color: white;
        width: 45%;
        height: 70%;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }



</style>