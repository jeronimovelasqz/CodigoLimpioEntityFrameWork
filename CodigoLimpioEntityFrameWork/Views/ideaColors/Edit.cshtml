@model CodigoLimpioEntityFrameWork.Models.ideaColor

@{
    ViewBag.Title = "";
}

<h2>-----</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.idIdea, "idIdea", htmlAttributes: new { @class = "text" })
            <div class="col-md-10">
                @Html.DropDownList("idIdea", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idIdea, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idColor, "idColor", htmlAttributes: new { @class = "text" })
            <div class="col-md-10">
                @Html.DropDownList("idColor", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idColor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="GUARDAR CAMBIOS" class="btn btn-default guardar_cambios-btn" />
            </div>
        </div>
    </div>
}

<div class="Regresar">
    @Html.ActionLink("REGRESAR", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

