        background-attachment: fixed;
        background-position: center;
    }

    .text {
        margin-top: 15px;
        font-family: Consolas;
        font-size: 18px;
    }

    h2 {
        font-family: 'Roboto', sans-serif;
        left: 10px;
        position: relative;
        top: 5px;
    }

    .guardar_cambios-btn {
        font-size: 18px;
        text-align: center;
        background-color: #F2A154;
        color: white;
        font-size: 18px;
        font-family: 'Roboto', sans-serif;
        font-family: 'Ubuntu', sans-serif;
        border-radius: 40px;
        cursor: pointer;
        position: relative;
        left: 30px;
        top: 20px;
    }

    .Regresar {
        position: relative;
