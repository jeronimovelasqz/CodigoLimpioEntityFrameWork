@model CodigoLimpioEntityFrameWork.Models.ideaColor

@{
    ViewBag.Title = "Create";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,900&family=Ubuntu:wght@500&display=swap" rel="stylesheet">

<h2>ASIGNAR COLOR</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="contenedor-colores">
            <div class="Lista_colores">
                @foreach (var color in ViewBag.Colors)
                {
                    <p><strong>@color.nombreColor:</strong> @color.descripcionColor</p>
                }

            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("idIdea", (int)ViewBag.idIdea)
        <div class="form-group">
            @Html.LabelFor(model => model.idColor, "Id Color", htmlAttributes: new { @class = "text" })
            <div class="col-md-10">
                @Html.DropDownList("idColor", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idColor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar Color" class="btn btn-default agregar_color-btn" />
            </div>

            <div class="Siguiente">
                @Html.ActionLink("SIGUIENTE", "Create", "ideaHerramientas", new { id = ViewBag.idIdea }, new { @class = "btn btn-default siguiente-btn" })
            </div>

        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>

    body {
        background-image: url('../../Imagenes/Imagen_color.png');
        background-size: 90%;
        background-color: #A5EAF3;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }


    .text {
        margin-top: 15px;
        font-family: Consolas;
        font-size: 18px;
    }

    h2 {
        font-family: 'Roboto', sans-serif;
        left: 170px;
        position: relative;
        top: 5px;
    }

    .agregar_color-btn {
        font-size: 18px;
        text-align: center;
        background-color: #F2A154;
        color: white;
        font-size: 18px;
        font-family: 'Roboto', sans-serif;
        font-family: 'Ubuntu', sans-serif;
        border-radius: 40px;
        cursor: pointer;
        position: relative;
        left: 60px;
        top: 20px;
    }

    .Siguiente {
        position: relative;
        margin-top: 70px;
        display: inline-block;
        padding: 5px;
        background-color: #F2A154;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        width: auto;
        font-family: 'Roboto', sans-serif;
        font-family: 'Ubuntu', sans-serif;
        color: #FFFFFF;
    }

    .contenedor-colores {
        background-color: white;
        width: 45%;
        height: 70%;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;

    }

    .Lista_colores {
        font-family: 'Raleway', sans-serif;
        font-family: 'Roboto', sans-serif;
        font-family: 'Ubuntu', sans-serif;
        margin-left: 20px;
    }


    


</style>
